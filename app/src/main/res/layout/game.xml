<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Game">


    <ImageButton
        android:id="@+id/creeperbutton1"
        android:layout_width="44dp"
        android:layout_height="50dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/creeperleft" />

    <ImageButton
        android:layout_width="44dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-50dp"
        android:id="@+id/creeperbutton2"
        android:src="@drawable/creeperright" />


    <ImageButton
        android:layout_width="44dp"
        android:layout_height="50dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/creeperbutton3"
        android:src="@drawable/creeperleft" />

    <ImageButton
        android:id="@+id/creeperbutton4"
        android:layout_width="44dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="-50dp"
        android:layout_marginRight="30dp"
        android:layout_weight="1"
        android:src="@drawable/creeperright" />

    <ImageButton
        android:layout_width="44dp"
        android:layout_height="50dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-50dp"
        android:id="@+id/creeperbutton5"
        android:src="@drawable/creeperleft" />

    
    <ImageButton
        android:layout_width="44dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-50dp"
        android:id="@+id/creeperbutton6"
        android:src="@drawable/creeperright" />

    
    <ImageButton
        android:layout_width="44dp"
        android:layout_height="50dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-50dp"
        android:id="@+id/creeperbutton8"
        android:src="@drawable/creeperleft" />
        
        
      
        
        
        <ImageButton
        android:layout_width="44dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-50dp"
        android:id="@+id/creeperbutton7"
        android:src="@drawable/creeperleft" />   <!---->


    <TextView
        android:id="@+id/gamescoretv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SCORE: " />




</LinearLayout>